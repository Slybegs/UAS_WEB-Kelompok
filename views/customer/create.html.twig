{% extends "template.html" %}

{% block title %}Customer{% endblock %}

{% block action %}
  {% include 'components/button-action.html' with {'name': 'List', 'url': '/customer'} %}
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <form method="POST" action="/customer">
        <div class="card">
          <div class="card-body col-12 col-md-6">
            {% include 'components/input-text.html' with {'name': 'name', 'label': 'Name'} %}
            {% include 'components/input-text.html' with {'name': 'phone_number', 'label': 'Phone Number'} %}
            {% include 'components/input-textarea.html' with {'name': 'address', 'label': 'Address'} %}
            <button type="submit" class="btn btn-warning col-12 col-md-2">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}