{% extends "template.html" %}

{% block title %}Customer{% endblock %}

{% block action %}
  {% include 'components/button-action.html' with {'name': 'List', 'url': '/customer'} %}
  {% include 'components/button-action.html' with {'name': 'Create', 'url': '/customer/create'} %}
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <form method="POST" action="/customer{{ '/' ~ customer.id }}">
        <input type="hidden" name="_method" value="PUT" />
        <div class="card">
          <div class="card-body col-12 col-md-6">
            {% include 'components/input-text.html' with {'name': 'name', 'label': 'Name', 'value': customer.name} %}
            {% include 'components/input-text.html' with {'name': 'phone_number', 'label': 'Phone Number', 'value': customer.phone_number} %}
            {% include 'components/input-textarea.html' with {'name': 'address', 'label': 'Address', 'value': customer.address} %}
            <button type="submit" class="btn btn-warning col-12 col-md-2">Save</button>
          </div>
        </div>
      </form>
      <div class="card-footer">
        <form class="delete d-flex d-md-inline flex-column" action="{{'/customer/' ~ customer.id ~ '/delete'}}" method="POST"
              onSubmit="return confirm('Are you sure you want to delete this customer?')">
          <input type="hidden" name="_method" value="DELETE">
          <input class="btn btn-danger col-12 col-md-1" type="submit" value="Delete">
        </form>
      </div>
    </div>
  </div>
{% endblock %}