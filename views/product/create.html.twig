{% extends "template.html" %}

{% block title %}Product{% endblock %}

{% block action %}
  {% include 'components/button-action.html' with {'name': 'List', 'url': '/product'} %}
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <form method="POST" action="/product">
        <div class="card">
          <div class="card-body col-12 col-md-6">
            {% include 'components/input-text.html' with {'name': 'code', 'label': 'Code'} %}
            {% include 'components/input-text.html' with {'name': 'name', 'label': 'Name'} %}
            {% include 'components/input-text.html' with {'name': 'category', 'label': 'Category'} %}
            {% include 'components/input-text.html' with {'name': 'purchase_price', 'label': 'Purchase Price', 'type': 'number'} %}
            {% include 'components/input-text.html' with {'name': 'sales_price', 'label': 'Sales Price', 'type': 'number'} %}
            {% include 'components/input-text.html' with {'name': 'qty', 'label': 'Qty', 'type': 'number'} %}
            <button type="submit" class="btn btn-warning col-12 col-md-2">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}