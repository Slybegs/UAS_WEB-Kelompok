{% extends "template.html" %}

{% block title %}Admin{% endblock %}

{% block action %}
  {% include 'components/button-action.html' with {'name': 'List', 'url': '/admin'} %}
  {% include 'components/button-action.html' with {'name': 'Create', 'url': '/admin/create'} %}
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <form method="POST" action="/admin{{ '/' ~ admin.id }}">
        <input type="hidden" name="_method" value="PUT" />
        <div class="card">
          <div class="card-body col-12 col-md-6">
            {% include 'components/input-text.html' with {'name': 'name', 'label': 'Name', 'value': admin.name} %}
            {% include 'components/input-text.html' with {'name': 'email', 'label': 'Email', 'value': admin.email} %}
            {% include 'components/input-text.html' with {'name': 'password', 'label': 'Password'} %}
            <button type="submit" class="btn btn-warning col-12 col-md-2">Save</button>
          </div>
        </div>
      </form>
      <div class="card-footer">
        <form class="delete d-flex d-md-inline flex-column" action="{{'/admin/' ~ admin.id ~ '/delete'}}" method="POST"
              onSubmit="return confirm('Are you sure you want to delete this admin?')">
          <input type="hidden" name="_method" value="DELETE">
          <input class="btn btn-danger col-12 col-md-1" type="submit" value="Delete">
        </form>
      </div>
    </div>
  </div>
{% endblock %}