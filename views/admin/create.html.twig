{% extends "template.html" %}

{% block title %}Admin{% endblock %}

{% block action %}
  {% include 'components/button-action.html' with {'name': 'List', 'url': '/admin'} %}
{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <form method="POST" action="/admin">
        <div class="card">
          <div class="card-body col-12 col-md-6">
            {% include 'components/input-text.html' with {'name': 'name', 'label': 'Name'} %}
            {% include 'components/input-text.html' with {'name': 'email', 'label': 'Email'} %}
            {% include 'components/input-text.html' with {'name': 'password', 'label': 'Password'} %}
            <button type="submit" class="btn btn-warning col-12 col-md-2">Save</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}